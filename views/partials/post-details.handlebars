<div class="card-grid">
    <div class="card-content custom-content">
        {{!-- Media Content --}}
        <section class="media">
            <section class="media-content custom-camo">
                {{!-- Displays the Image --}}
                {{#ifEquals media_type "image"}}
                    <img src="
                {{/ifEquals}}
                    {{ media_url }}
                {{#if media_type}}
                    ">
                {{/if}}
                {{!-- Displays the Audio --}}
                {{#ifEquals media_type "audio"}}
                    <audio controls> <source src="
                {{/ifEquals}}
                    {{ media_url }}
                {{#if media_type}}
                    " type="audio/mp3"></audio>
                {{/if}}
            </section>
        </section>

        {{!-- Text Content --}}
        <div class="content">
            <p class="title is-4">{{project.name}}</p>
            <a href="/profile/{{project.user.id}}" class="custom-txt-name">{{project.user.firstName}} {{project.user.lastName}}</a>
            <p class="custom-txt">{{caption}}</p>
            <p class="custom-txt">{{format_date createdAt}} {{format_time createdAt}}</p>
        </div>
    </div>
</div>